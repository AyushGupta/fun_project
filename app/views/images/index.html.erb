<h3 style="width: 97%;border: 1px solid;background: #4C4A4A; margin-bottom:2px"><%=@images.first.image_category.title%></h3>

<div id="galleria">
	<% @images.each_with_index do |image, index| %>
		<% if(index==0)%>
			<%= image_tag(image.image_url, :id=>image.id, :class => 'default') %>
		<% else%>
			<%= image_tag(image.image_url, :id=>image.id) %>
		<%end%>
		<!-- <%= link_to 'Show', image %>
		<%= link_to 'Edit', edit_image_path(image) %>
		<%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %> -->
	<% end %>
</div>
<!-- <%= link_to 'New Image', new_image_path %> -->
<style>
    #galleria{ width: 100%; height: 400px; background: #000 }
</style>
<script>
    Galleria.loadTheme('galleria/themes/classic/galleria.classic.min.js');
    Galleria.run('#galleria');
</script>



