<div id="barousel_itemnav" class="barousel">
	
	<div class="barousel_image">
			<% @images.each_with_index do |image, index| %>
				<% if(index==0)%>
				<%= image_tag(image.image_url, :id=>image.id, :class => 'default') %>
				<% else%>
				<%= image_tag(image.image_url, :id=>image.id) %>
				<%end%>
				<!--<%= link_to 'Show', image %>
				<%= link_to 'Edit', edit_image_path(image) %>
				<%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>-->
			<% end %>
	</div>
	<div class="barousel_content">
	</div>
	<div class="barousel_nav">
		<ul>
			<% @images.each_with_index do |image, index| %>
				<% if(index==0)%>
					<li><a href="#" id=<%=image.id%> title=<%=image.id%> onclick="changeImage(this.title);" class="current"></a></li>
				<%else%>
					<li><a href="#" id=<%=image.id%>s title=<%=image.id%> onclick="changeImage(this.title);"></a></li>
				<%end%>
					<!--<%= link_to 'Show', image %>
					<%= link_to 'Edit', edit_image_path(image) %>
					<%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>-->
			<% end %>
		</ul>
	</div>
	
</div>
<script type="text/javascript">
	function changeImage(index) {
		$('.default').removeClass('default');
		$('.current').removeClass('current');
	  	$("#"+index).addClass('default');
	  	$("#"+index+"s").addClass('current');
	}
</script>



