<%= flash[:error] %>
<%if @images!=nil %>
	<h3 style="width: 94.2%;border: 1px solid;background: url(../images/header-background-png.png) repeat-x; margin-bottom:2px;; margin-left: 6px;"><%if @images!=nil %><%=@images.first.image_category.title%><%end%></h3>
	<% @images.each do |image| %>
		<div class="product_box">
			<%= link_to image_tag(image.image_url, :class => 'list_image'),:controller => "images", :action=>"show",:id=> image.id %>
			<h3><%= image.title%></h3>
		</div>
	<% end %>
<% end %>



